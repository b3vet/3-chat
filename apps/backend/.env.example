# 3-Chat Backend Environment Variables
# Copy this file to .env and fill in your values

# Phoenix Configuration
# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=your_secret_key_base_here_at_least_64_characters_long

# Host configuration for production
PHX_HOST=localhost
PORT=4000

# Guardian JWT Configuration
# Generate with: mix guardian.gen.secret
GUARDIAN_SECRET=your_guardian_secret_key_here_at_least_32_characters

# SMS Provider Configuration
# Options: console (development), textbelt (production)
SMS_PROVIDER=console

# Textbelt API Key (required if SMS_PROVIDER=textbelt)
# Get your API key at https://textbelt.com/
TEXTBELT_API_KEY=

# File Uploads Path
UPLOADS_PATH=/var/uploads

# Database Configuration (for future PostgreSQL migration)
# DATABASE_URL=ecto://user:password@localhost/three_chat_prod
# POOL_SIZE=10
